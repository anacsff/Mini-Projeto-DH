<%- include("./partials/head") %>
<!-- <%- include("./partials/header")%> -->

<main id="painel">
    <nav id="navbar">
        <div id="navbar-container">
            <h1 class="logo">Apollo TECH</h1>
            <ul id="navbar-itens">
                <li><a href="/">Início</a></li>
                <li><a href="">Cursos</a></li>
                <li><a href="/alunos">Área do Professor</a></li>
            </ul>
        </div>
    </nav>

    <div id="tabela-alunos">

        <h1>Lista de alunos matriculados</h1>
        <div id="botao">
            <a href="/alunos/criar" class="novo-aluno">Matricular aluno</a>
            
        </div>
        <% if(alunos.length > 0){%>
            <div class="container-tabela">
    
                <table class="tabela">
                    <thead>
                        <tr>
                            <th>Nome</th>
                            <th>E-mail</th>
                            <th>Data de Nascimento</th>
                            <th>Telefone</th>
                            <th>Curso</th>
                            <th>Opções</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let aluno of alunos) { %>
    
                            <tr>
                                <td><%= aluno.nome%></td>
                                <td><%= aluno.email%></td>
                                <td class="data"><%= aluno.data_nascimento%></td>
                                <td><%= aluno.celular%></td>
                                <td class="data"><%= aluno.curso_id%></td>
                                <td class="acoes">
                                    <a class="link-visu" href="/alunos/<%= aluno.id %>">Visualizar</a>
                                    <a class="link-edit" href="/alunos/editar/<%= aluno.id %>">Editar</a>
                                    <a class="link-del" href="/alunos/excluir/<%= aluno.id %>">Excluir</a>
                                </td>
                            </tr>
    
                        <% } %>
            
                    </tbody>
                </table>
    </div>
        
    <% } else { %>
        <h2 class="erro">Nenhum aluno matriculado</h2>
    <% } %>
</main>


<%- include("./partials/footer") %>
